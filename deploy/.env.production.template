# 生产环境配置模板
# 请复制此文件为 .env.production 并修改实际值

# 数据库配置
DATABASE_URL=postgresql://stock_user:your_secure_password@postgres:5432/stock_db

# Redis配置
REDIS_URL=redis://redis:6379/0

# API配置
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# 任务调度配置（北京时间）
WEEKEND_SCAN_HOUR=20
WEEKEND_SCAN_MINUTE=0
DAILY_SCAN_HOUR=15
DAILY_SCAN_MINUTE=5

# 并行处理配置
MAX_WORKERS=8

# 日志配置
LOG_LEVEL=INFO

# 安全配置（重要！请修改）
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# 邮件通知配置（可选）
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# 监控配置（可选）
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# 数据备份配置（可选）
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30