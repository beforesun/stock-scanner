# 生产环境配置

# 数据库配置
DATABASE_URL=postgresql://stock_user:${POSTGRES_PASSWORD}@postgres:5432/stock_db

# Redis配置
REDIS_URL=redis://redis:6379/0

# API配置
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False
SECRET_KEY=your-very-secret-key-here-change-this-in-production

# 数据源配置
TUSHARE_TOKEN=

# 任务调度配置
WEEKEND_SCAN_HOUR=20
WEEKEND_SCAN_MINUTE=0
DAILY_SCAN_HOUR=15
DAILY_SCAN_MINUTE=5

# 并行处理配置
MAX_WORKERS=8

# 日志配置
LOG_LEVEL=INFO

# 监控配置
PROMETHEUS_METRICS_PORT=9090
GRAFANA_PORT=3001

# 安全配置
# 这些变量需要在部署时设置
POSTGRES_PASSWORD=your-strong-postgres-password
GRAFANA_PASSWORD=your-grafana-admin-password